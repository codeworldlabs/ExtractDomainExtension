{
    "manifest_version": 2,
    "name": "Link Collector",
    "version": "1.0",
    "browser_action": {
        "default_title": "Link Collector",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ]
}